<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="charlesli.com.personalvocabbuilder.controller.ReviewResult">

    <TextView
        android:id="@+id/reviewCompletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Review Complete!"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/perfectLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewCompletion"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/perfectTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Perfect" />

        <ProgressBar
            android:id="@+id/perfectProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:progress="80" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/easyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/perfectLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/easyTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Easy" />

        <ProgressBar
            android:id="@+id/easyProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:progress="10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/familiarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/easyLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/familiarTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Familiar" />

        <ProgressBar
            android:id="@+id/familiarProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:progress="5" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/difficultLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/familiarLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/difficultTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Difficult" />

        <ProgressBar
            android:id="@+id/difficultProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:progress="5" />

    </LinearLayout>

    <TextView
        android:id="@+id/vocabImprovement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/difficultLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="You are more familiar with 2 vocab!"
        android:textSize="18sp" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="CONTINUE" />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/continueButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:indeterminate="false"
        android:progress="100" />


</RelativeLayout>
