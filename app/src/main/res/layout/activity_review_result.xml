<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="charlesli.com.personalvocabbuilder.controller.ReviewResult">

    <android.support.v7.widget.Toolbar
        android:id="@+id/result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/reviewCompletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Review Complete!"
        android:textColor="#000000"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/dayStreakLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewCompletion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dayStreakNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dayStreakText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Day Streak"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/perfectLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dayStreakLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/perfectTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Perfect"
            android:textColor="@color/black"/>

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/perfectProgress"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:layout_width="160dp"
            android:layout_height="5dp"
            android:indeterminate="false"
            android:progress="80"
            app:mpb_progressStyle="horizontal"
            app:mpb_useIntrinsicPadding="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/easyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/perfectLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/easyTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textColor="@color/black"/>

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/easyProgress"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:layout_width="160dp"
            android:layout_height="5dp"
            android:indeterminate="false"
            android:progress="10"
            app:mpb_progressStyle="horizontal"
            app:mpb_useIntrinsicPadding="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/familiarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/easyLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/familiarTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Familiar"
            android:textColor="@color/black"/>

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/familiarProgress"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:layout_width="160dp"
            android:layout_height="5dp"
            android:indeterminate="false"
            android:progress="5"
            app:mpb_progressStyle="horizontal"
            app:mpb_useIntrinsicPadding="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/difficultLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/familiarLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/difficultTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Difficult"
            android:textColor="@color/black"/>

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/difficultProgress"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:layout_width="160dp"
            android:layout_height="5dp"
            android:indeterminate="false"
            android:progress="5"
            app:mpb_progressStyle="horizontal"
            app:mpb_useIntrinsicPadding="false"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/vocabImprovementLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/difficultLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vocabImprovementBeforeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are more familiar with "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/vocabImprovementNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/vocabImprovementAfterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" vocab!"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/continueButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="CONTINUE"
        android:theme="@style/AppColor.Button" />

</RelativeLayout>
