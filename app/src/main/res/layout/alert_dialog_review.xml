<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/reviewTypeSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/categorySpinner"
        android:layout_toEndOf="@id/categorySpinner"
        android:layout_toRightOf="@id/categorySpinner"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:spinnerMode="dropdown" />

    <RadioButton
        android:id="@+id/vocabDefReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categorySpinner"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Vocab -> Definition" />

    <RadioButton
        android:id="@+id/defVocabReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vocabDefReview"
        android:checked="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Definition -> Vocab" />

    <RadioButton
        android:id="@+id/mixReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/defVocabReview"
        android:layout_marginBottom="5dp"
        android:checked="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Vocab/Definition -> Definition/Vocab" />

    <!--
    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mixReview"
