        <Button
            android:id="@+id/randomOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random"/>

        <Button
            android:id="@+id/mostDifficultOption"
            android:layout_width="wrap_content"
