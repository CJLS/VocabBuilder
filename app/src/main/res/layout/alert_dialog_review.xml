<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:spinnerMode="dropdown" />

    <RadioButton
        android:id="@+id/wordDefReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Word -> Definition" />

    <RadioButton
        android:id="@+id/defWordReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wordDefReview"
        android:layout_marginBottom="5dp"
        android:checked="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Definition -> Word" />

    <RadioButton
        android:id="@+id/mixReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/defWordReview"
        android:layout_marginBottom="5dp"
        android:checked="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Mix" />

    <LinearLayout
        android:id="@+id/reviewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mixReview"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Review "
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:id="@+id/numberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="5"
            android:text="100"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/wordsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" words"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reviewLayout" />

</RelativeLayout>
