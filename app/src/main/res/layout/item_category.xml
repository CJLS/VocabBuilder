<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:id="@+id/categoryImage"
        android:src="@drawable/book_icon_color"
        android:scaleType="fitXY"
        android:contentDescription="@string/vocab_level"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/categoryName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/categoryImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vocab"
        android:id="@+id/categoryDesc"
        android:layout_below="@id/categoryName"
        android:layout_alignLeft="@id/categoryName"/>

</RelativeLayout>
